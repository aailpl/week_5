<h1 class="text-center">Home Page</h1>
<div class="container">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<div class="panel panel-primary">
					<div class="panel-heading text-center">
						Posts
						<a type="button" href="/post/new" class="btn btn-primary btn-xs pull-right" role="button">Add</a>
					</div>
					<div class="panel-body">
						<% @posts.each do |post|%>
							<div class="row">
								<div class="col-md-5 text-center"><a href="/post/<%= post.id %>"><%= post.title %></a> </div>
								<div class="col-md-7">
								<span class="content" style="word-wrap:break-word;"><%= post.content[0..50] %></span></div>			
							</div>							
						<% end %>	
					</div>
			</div>
			<div class="col-md-3"></div>
		</div>	
	</div>	
</div>