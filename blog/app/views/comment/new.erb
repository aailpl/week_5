<div class="container">
	<form action="/comment/<%= @post_id %>" method="post">
		<div class="form-group">
			<label for="title">User Name</label>
			<input type="text" name="user" class="form-control" id="title">
		</div>
		<div class="form-group">
			<label for="content">Leave your Comment Here</label>
			<textarea name="content" rows="4" cols="50" class="form-control" id="content"></textarea>
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>